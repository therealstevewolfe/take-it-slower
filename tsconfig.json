{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "src/*.tsx",
    "src/test.ts",
    "testRunner.ts"
  ]
}
